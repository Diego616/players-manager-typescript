<h1>EDIT PLAYER</h1>
<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card">
      <div class="card-body">
        <form action="/players/edit/{{player._id}}" method="POST">
          <div class="form-group">
            <input type="text" name="name" value="{{player.name}}" placeholder="Player Name" 
            class="form-control" autofocus> 
          </div>
          <div class="form-group">
            <input type="text" name="alias" value="{{player.alias}}" placeholder="Pokerstars Nickname" 
            class="form-control"> 
          </div>
          <div class="form-group">
            <input type="email" name="email" value="{{player.email}}" placeholder="E-mail" 
            class="form-control"> 
          </div>
          <button type="submit" class="btn btn-success btn-block">
            Save
          </button>
        </form>
      </div>
    </div>
  </div>
</div>